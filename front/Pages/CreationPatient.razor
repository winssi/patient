@page "/CreationPatient"
@inject HttpClient Http

<DataAnnotationsValidator />

<div class="card w-75">
    <div class="card-body">

        <form Model="@Patients">
            <div class="form-group">
                <label for="exampleInputEmail1">Nom patient</label>
                <input class="form-control" id="exampleInputEmail1" placeholder="Name" @bind="Patients.Name">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Prenom</label>
                <input class="form-control" id="exampleInputPassword1" placeholder="Prenom">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Service Médicale</label>
                <select @bind="Patients.Service" id="inputState" class="form-control">
                    <option selected>Choisir le service</option>
                    <option value="Pédiatrie">Pédiatrie</option>
                    <option value="Chirurgie">Chirurgie</option>
                    <option value="cardiologie">cardiologie</option>
                    <option value="Ophtalmologie">Ophtalmologie</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Description</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                    @bind="Patients.Description"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </form>

    </div>
</div>


